{
  "name": "fcp-defra-id-example",
  "version": "0.1.0",
  "description": "Defra Identity integration example",
  "homepage": "https://github.com/DEFRA/fcp-defra-id-example",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "pretest": "npm run test:lint",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --runInBand --forceExit",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage=false --onlyChanged --watch --runInBand",
    "test:lint": "standard",
    "test:debug": "node --inspect-brk=0.0.0.0 ./node_modules/jest/bin/jest.js --coverage=false --onlyChanged --watch --runInBand --no-cache",
    "docker:test": "docker compose -f compose.yaml -f compose.test.yaml -p fcp-defra-id-example-test run --rm fcp-defra-id-example",
    "docker:test:watch": "docker compose -f compose.yaml -f compose.test.yaml -f compose.test.watch.yaml -p fcp-defra-id-example-test run --rm fcp-defra-id-example",
    "docker:test:debug": "docker compose -f compose.yaml -f compose.test.yaml -f compose.test.watch.yaml -f compose.test.debug.yaml -p fcp-defra-id-example-test run --rm --service-ports fcp-defra-id-example",
    "start:watch": "nodemon --inspect=0.0.0.0 --ext js --legacy-watch src/index.js",
    "start:debug": "nodemon --inspect-brk=0.0.0.0 --ext js --legacy-watch src/index.js"
  },
  "author": "Defra",
  "contributors": [
    "John Watson <john.watson1@defra.gov.uk>"
  ],
  "license": "OGL-UK-3.0",
  "dependencies": {
    "@hapi/bell": "13.1.0",
    "@hapi/catbox-redis": "7.0.2",
    "@hapi/cookie": "12.0.1",
    "@hapi/crumb": "9.0.1",
    "@hapi/hapi": "21.4.0",
    "@hapi/inert": "7.1.0",
    "@hapi/jwt": "3.2.0",
    "@hapi/scooter": "7.0.0",
    "@hapi/vision": "7.0.3",
    "@hapi/wreck": "18.1.0",
    "@hapi/yar": "11.0.2",
    "blankie": "5.0.0",
    "convict": "6.2.4",
    "convict-format-with-validator": "6.2.0",
    "govuk-frontend": "5.9.0",
    "hapi-pino": "12.1.0",
    "joi": "17.13.3",
    "jwk-to-pem": "2.0.7",
    "nunjucks": "3.2.4"
  },
  "devDependencies": {
    "@hapi/catbox-memory": "6.0.2",
    "jest": "29.7.0",
    "jest-junit": "16.0.0",
    "nodemon": "3.0.1",
    "standard": "17.1.0"
  },
  "standard": {
    "globals": [
      "describe",
      "beforeEach",
      "expect",
      "test",
      "afterEach",
      "jest",
      "beforeAll",
      "afterAll"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      "**/test-output/**"
    ]
  }
}
